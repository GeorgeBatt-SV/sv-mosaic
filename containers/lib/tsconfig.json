{
	"compilerOptions": {
		"jsx": "react",
		"lib": [
			"ES2019",
			"DOM"
		],
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"baseUrl": "./",
		"paths": {
			"@root/*": [
				"./src/*"
			]
		},
		"skipLibCheck": true,
		"esModuleInterop": true,
		"plugins": [
			{ "transform": "typescript-transform-paths" },
			{ "transform": "typescript-transform-paths", "afterDeclarations": true }
		]
	},
	"include": [
		"./src/**/*"
	],
	"exclude": [
		"node_modules",
		"dist",
		"__tests__"
	]
}
