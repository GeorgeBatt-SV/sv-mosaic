{
	"compilerOptions": {
		"jsx": "react",
		"lib": [
			"ES2019",
			"DOM"
		],
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"baseUrl": "./",
		"paths": {
			"@root/*": [
				"../mosaic/src/*"
			]
		},
		"skipLibCheck": true,
		"esModuleInterop": true,
	},
	"include": [
		"./pages/**/*",
		"./tests/**/*"
	],
	"exclude": [
		"node_modules"
	]
}
